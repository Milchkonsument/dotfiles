format-prefix-font = 3
label = %percentage:2%%


[module/memory]
type = internal/memory
interval = 2
format-prefix = "﬙ "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-font = 3
label = %percentage_used:2%%


[module/gpu]
