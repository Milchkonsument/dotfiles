background-alt = #FFF
foreground = #dcdccc
padding = 1
item-margin = 0
height = 24
foreground-alt = #d1bacc
primary = #FFF
secondary = #999
alert = #bd2c40

[bar/kusu]
monitor = ${env:MONITOR:HDMI-0}
width = 100%
height = ${colors.height}
offset-x = 0
offset-y = 0
radius = ${colors.radius}
fixed-center = true
background = ${colors.background}
foreground = ${colors.foreground}
padding = ${colors.padding}
font-0 = "JetBrainsMono Nerd Font:pixelsize=10;0"
font-1 = "JetBrainsMono Nerd Font:pixelsize=10;0"
font-2 = "JetBrainsMono Nerd Font:pixelsize=14;0"
modules-left = pulseaudio
modules-center = memory cpu
modules-right = date
tray-position = none
cursor-click = pointer
cursor-scroll = ns-resize
override-redirect = false

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/start]
type = custom/text
content = 
